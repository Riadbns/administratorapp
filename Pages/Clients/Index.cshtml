@page
@*name of the model that it's associate to this page*@
@model WebApplication1.Pages.Clients.IndexModel
@{
}

<br />
<h2>List of Clients</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>New Client</a>
<a class='btn btn-danger btn-sm' href='/Clients/DeleteAll'>Delete All</a>
<table class="table">
	<thead>
		<tr>
			<th class="element">ID</th>
			<th>Fullname</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Addresse</th>
			<th>Created At</th>
			<th>Action</th>

		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.listClients){
			<tr>
				<td>@item.id</td>
				<td>@item.fullname</td>
				<td>@item.email</td>
				<td>@item.phone</td>
				<td>@item.adresse</td>
				<td>@item.created_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/CLients/Edit?id=@item.id">Edit</a>
					<a class="btn btn-danger btn-sm"  href="/CLients/Delete?id=@item.id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>